<table class="table table-striped">
    <caption>欲しい人が多い商品ランキング</caption>
    <thead>
      <tr>
        <th colspan="2">順位</th>
        <th colspan="3">希望数</th>
        <th colspan="3">商品名</th>
        <th colspan="3">イメージ</th>
      </tr>
    </thead>
    <tbody>
    <% for i in 0..9 %>
      <tr class="thistable">
        <% break if @rank[i]==nil %>
        <th colspan="2" scope="row"><%= i+1 %>位</th>
        <td colspan="3"><%= @rank[i][1] %>人</td>
        <td colspan="3"><%= Item.find_by(id:@rank[i][0]).title %></td>
        <td colspan="3"><%= image_tag(Item.find_by(id:@rank[i][0]).medium_image) %></td>
      </tr>
    <% end %>
    
    </tbody>
</table>